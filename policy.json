{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ForceSSl",
            "Action": "s3:*",
            "Effect": "Deny",
            "Resource": "arn:aws:s3:::${bucket_name}/*",
            "Condition": {
              "Bool": {
                "aws:SecureTransport": "false"
              }
            },
            "Principal": "*"
        }
    ]
}
